@inherits LayoutComponentBase

<div class="min-h-screen bg-dark">
    <Navigation />
    
    <main class="pt-32">
        @Body
    </main>
    
    <footer class="border-t border-dark-border py-8 mt-20">
        <div class="container mx-auto px-6 lg:px-12">
            <div class="flex flex-col md:flex-row items-center justify-between gap-4">
                <p class="text-sm text-gray-500">
                    &copy; @DateTime.Now.Year Quentin Givens. All rights reserved.
                </p>
                <div class="flex items-center gap-6">
                    <a href="https://github.com" target="_blank" class="text-gray-500 hover:text-white transition-colors">
                        <span class="text-sm">GitHub</span>
                    </a>
                    <a href="https://linkedin.com" target="_blank" class="text-gray-500 hover:text-white transition-colors">
                        <span class="text-sm">LinkedIn</span>
                    </a>
                    <a href="https://twitter.com" target="_blank" class="text-gray-500 hover:text-white transition-colors">
                        <span class="text-sm">Twitter</span>
                    </a>
                </div>
            </div>
        </div>
    </footer>
</div>

