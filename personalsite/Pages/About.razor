<!-- Matrix Glitch Effect -->
@if (isEffectActive)
{
    <div class="matrix-overlay">
        <div class="glitch-layer"></div>
        <div class="matrix-rain">
            @for (int i = 0; i < 30; i++)
            {
                <div class="matrix-column" style="--col-index: @i">
                    @{
                        var chars = "01アイウエオカキクケコサシスセソタチツテト".ToCharArray();
                        @foreach (var c in chars.Take(10))
                        {
                            <span>@c</span>
                        }
                    }
                </div>
            }
        </div>
    </div>
}

<style>
    .space-y-6 > * + * {
        margin-top: 1.5rem;
    }

    .prose {
        max-width: 65ch;
    }

    /* Button Styles */
    .matrix-button {
        padding: 1rem 2rem;
        font-size: 1.125rem;
        font-weight: 600;
        color: white;
        background: linear-gradient(135deg, #00ff41 0%, #00aa2e 100%);
        border: none;
        border-radius: 0.5rem;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(0, 255, 65, 0.4);
    }

    .matrix-button:hover:not(:disabled) {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(0, 255, 65, 0.6);
    }

    .matrix-button:active:not(:disabled) {
        transform: translateY(0);
    }

    .matrix-button:disabled {
        opacity: 0.7;
        cursor: not-allowed;
    }

    /* Matrix Glitch Effect */
    .matrix-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        z-index: 9999;
        pointer-events: none;
        background: rgba(0, 0, 0, 0.8);
        animation: matrixFadeIn 0.3s ease-out;
    }

    .glitch-layer {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: repeating-linear-gradient(
            0deg,
            rgba(0, 255, 65, 0.1) 0px,
            transparent 2px,
            transparent 4px
        );
        animation: glitchScan 0.1s infinite linear;
    }

    .matrix-rain {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: space-around;
    }

    .matrix-column {
        display: flex;
        flex-direction: column;
        color: #00ff41;
        font-family: 'Courier New', monospace;
        font-size: 20px;
        animation: matrixFall 2s linear infinite;
        animation-delay: calc(var(--col-index) * -0.1s);
        opacity: 0.8;
        text-shadow: 0 0 8px #00ff41;
    }

    .matrix-column span {
        margin: 5px 0;
    }

    @@keyframes matrixFadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }

    @@keyframes glitchScan {
        0% { transform: translateY(0); }
        100% { transform: translateY(100px); }
    }

    @@keyframes matrixFall {
        0% {
            transform: translateY(-100%);
            opacity: 0;
        }
        10% {
            opacity: 1;
        }
        90% {
            opacity: 1;
        }
        100% {
            transform: translateY(100vh);
            opacity: 0;
        }
    }

    /* Add glitch effect to page content during matrix */
    body.matrix-active section {
        animation: contentGlitch 0.3s infinite;
    }

    @@keyframes contentGlitch {
        0% {
            transform: translate(0);
            filter: hue-rotate(0deg);
        }
        20% {
            transform: translate(-2px, 2px);
            filter: hue-rotate(90deg);
        }
        40% {
            transform: translate(-2px, -2px);
            filter: hue-rotate(180deg);
        }
        60% {
            transform: translate(2px, 2px);
            filter: hue-rotate(270deg);
        }
        80% {
            transform: translate(2px, -2px);
            filter: hue-rotate(360deg);
        }
        100% {
            transform: translate(0);
            filter: hue-rotate(0deg);
        }
    }
</style>

@code {
    private bool isEffectActive = false;

    private async Task TriggerMatrixGlitch()
    {
        if (isEffectActive) return;

        isEffectActive = true;
        StateHasChanged();

        // Add matrix class to body for content glitch effect
        await JS.InvokeVoidAsync("eval", "document.body.classList.add('matrix-active')");

        // Wait 5 seconds
        await Task.Delay(5000);

        // Remove effects
        await JS.InvokeVoidAsync("eval", "document.body.classList.remove('matrix-active')");
        
        isEffectActive = false;
        StateHasChanged();
    }
}

