@inject IJSRuntime JS

<nav class="fixed top-0 left-0 right-0 z-50 bg-dark border-b border-dark-border backdrop-blur-sm">
    <div class="container mx-auto px-6 lg:px-12">
        <div class="flex items-center justify-between py-8">
            <!-- Logo/Name -->
            <a href="/" class="text-xl font-bold tracking-tight text-white hover:text-indigo-400 transition-colors">
                Quentin Givens
            </a>

            <!-- Desktop Navigation -->
            <div class="hidden md:flex items-center gap-20">
                <NavLink href="/" class="nav-link" Match="NavLinkMatch.All">
                    Home
                </NavLink>
                <NavLink href="/about" class="nav-link">
                    About
                </NavLink>
                
                <!-- Projects Dropdown -->
                <div class="relative projects-dropdown">
                    <button @onclick="ToggleProjectsMenu" class="nav-link flex items-center gap-1">
                        Projects
                        <svg class="w-4 h-4 transition-transform @(projectsMenuOpen ? "rotate-180" : "")" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                        </svg>
                    </button>
                    
                    @if (projectsMenuOpen)
                    {
                        <div class="dropdown-menu">
                            <NavLink href="/dadboard" class="dropdown-item" @onclick="CloseProjectsMenu">
                                <span class="text-xl mr-2">üë®‚Äçüëß‚Äçüë¶</span>
                                <div>
                                    <div class="font-medium">Dadboard</div>
                                    <div class="text-xs text-gray-500">Dad life analytics</div>
                                </div>
                            </NavLink>
                            <!-- Add more projects here later -->
                        </div>
                    }
                </div>
                
                <NavLink href="/contact" class="nav-link">
                    Contact
                </NavLink>
            </div>

            <!-- Mobile Menu Button -->
            <button @onclick="ToggleMobileMenu" class="md:hidden text-gray-300 hover:text-white transition-colors">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    @if (!mobileMenuOpen)
                    {
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                    }
                    else
                    {
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    }
                </svg>
            </button>
        </div>

        <!-- Mobile Menu -->
        @if (mobileMenuOpen)
        {
            <div class="md:hidden border-t border-dark-border py-6">
                <div class="flex flex-col gap-6">
                    <NavLink href="/" class="nav-link-mobile" Match="NavLinkMatch.All" @onclick="CloseMobileMenu">
                        Home
                    </NavLink>
                    <NavLink href="/about" class="nav-link-mobile" @onclick="CloseMobileMenu">
                        About
                    </NavLink>
                    
                    <!-- Projects Mobile Dropdown -->
                    <div>
                        <button @onclick="ToggleProjectsMenuMobile" class="nav-link-mobile w-full text-left flex items-center justify-between">
                            Projects
                            <svg class="w-4 h-4 transition-transform @(projectsMenuOpenMobile ? "rotate-180" : "")" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                            </svg>
                        </button>
                        @if (projectsMenuOpenMobile)
                        {
                            <div class="mt-3 ml-4 flex flex-col gap-3">
                                <NavLink href="/dadboard" class="nav-link-mobile flex items-center gap-2" @onclick="CloseMobileMenu">
                                    <span class="text-lg">üë®‚Äçüëß‚Äçüë¶</span>
                                    <span>Dadboard</span>
                                </NavLink>
                                <!-- Add more projects here later -->
                            </div>
                        }
                    </div>
                    
                    <NavLink href="/contact" class="nav-link-mobile" @onclick="CloseMobileMenu">
                        Contact
                    </NavLink>
                </div>
            </div>
        }
    </div>
</nav>

<style>
    .nav-link {
        font-size: 1.125rem;
        font-weight: 500;
        color: #9ca3af;
        transition: color 0.2s;
        letter-spacing: 0.025em;
    }

    .nav-link:hover {
        color: #ffffff;
    }

    .nav-link.active {
        color: #ffffff;
    }

    .nav-link-mobile {
        font-size: 1rem;
        font-weight: 500;
        color: #9ca3af;
        padding-top: 0.5rem;
        padding-bottom: 0.5rem;
        transition: color 0.2s;
    }

    .nav-link-mobile:hover {
        color: #ffffff;
    }

    .nav-link-mobile.active {
        color: #ffffff;
    }

    .w-6 {
        width: 1.5rem;
    }

    .h-6 {
        height: 1.5rem;
    }

    .w-4 {
        width: 1rem;
    }

    .h-4 {
        height: 1rem;
    }

    .rotate-180 {
        transform: rotate(180deg);
    }

    .projects-dropdown {
        position: relative;
    }

    .dropdown-menu {
        position: absolute;
        top: calc(100% + 1rem);
        left: 50%;
        transform: translateX(-50%);
        min-width: 240px;
        background: #111111;
        border: 1px solid #1F1F23;
        border-radius: 0.5rem;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5);
        padding: 0.5rem;
        animation: slideDown 0.2s ease-out;
        z-index: 100;
    }

    @@keyframes slideDown {
        from {
            opacity: 0;
            transform: translateX(-50%) translateY(-10px);
        }
        to {
            opacity: 1;
            transform: translateX(-50%) translateY(0);
        }
    }

    .dropdown-item {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.75rem;
        border-radius: 0.375rem;
        color: #9ca3af;
        transition: all 0.2s;
        text-decoration: none;
    }

    .dropdown-item:hover {
        background: #1A1A1A;
        color: #ffffff;
    }

    .dropdown-item.active {
        background: #1A1A1A;
        color: #ffffff;
    }
</style>

@code {
    private bool mobileMenuOpen = false;
    private bool projectsMenuOpen = false;
    private bool projectsMenuOpenMobile = false;


    private void ToggleMobileMenu()
    {
        mobileMenuOpen = !mobileMenuOpen;
        if (!mobileMenuOpen)
        {
            projectsMenuOpenMobile = false;
        }
    }

    private void CloseMobileMenu()
    {
        mobileMenuOpen = false;
        projectsMenuOpenMobile = false;
    }

    private void ToggleProjectsMenu()
    {
        projectsMenuOpen = !projectsMenuOpen;
    }

    private void CloseProjectsMenu()
    {
        projectsMenuOpen = false;
    }

    private void ToggleProjectsMenuMobile()
    {
        projectsMenuOpenMobile = !projectsMenuOpenMobile;
    }

}

